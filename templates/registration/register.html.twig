{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>
    <div class="container">
        {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.username, {'label': 'Nom d\'utilisateur :', 'attr': {'placeholder':'Pseudo'}}) }}
        {{ form_row(registrationForm.email, {'label': 'Adresse email :', 'attr': {'placeholder':'Adresse@email.fr'}}) }}
        {{ form_row(registrationForm.password.first, {'label': 'Mot de passe :', 'attr': {'placeholder':'Minimum de 6 caract√®res'}}) }}
        {{ form_row(registrationForm.password.second, {'label': 'Confirmation :', 'attr': {'placeholder':'Confirme ton mot de passe'}}) }}
        {{ form_row(registrationForm.birth_date, {'label': 'Date de naissance :'}) }}

        <button type="submit" class="btn btn-primary">{{ button_label|default('Je m\'inscris !') }}</button>

        {{ form_end(registrationForm) }}
    </div>
    <a href="{{ path('app_index') }}">retour</a>
{% endblock %}
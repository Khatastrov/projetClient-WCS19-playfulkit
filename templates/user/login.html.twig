{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion :</h1>

    <form class="container" action="{{ path('user_login') }}" method="post">

        {# this block allows error messages display #}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-group">
            <input placeholder="Nom d'utilisateur" required name="_username" type="text" class="form-control"></input>
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control"></input>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"

        {#
             Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
             See https://symfony.com/doc/current/security/remember_me.html

             <div class="checkbox mb-3">
                 <label>
                     <input type="checkbox" name="_remember_me"> Remember me
                 </label>
             </div>
        #}

         <div class="form-group">
            <button type="submit" class="btn btn-primary">Connexion !</button>
        </div>
    </form>

{% endblock %}

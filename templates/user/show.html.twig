            </div>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="userInfo">
                    <article>
                        <p>Nom d'utilisateur : {{ user.username }}</p>
                        <p>Adresse  mail : {{ user.email }}</p>
                        <p>Date d'anniversaire : {{ user.birthDate ? user.birthDate|date('d/m/Y') : '' }}</p>

                        {% if firstName is null %}
                            <p>PrÃ©nom : Tu n'as pas encore renseigner cette information</p>
                        {% else %}
                            <p>{{ user.firstname }}</p>
                        {% endif %}

                        {% if lastName is null %}
                            <p>Nom : Tu n'as pas encore renseigner cette information</p>
                        {% else %}
                            <p>{{ user.lastname }}</p>
                        {% endif %}

                        {% if address is null %}
                            <p>Adresse : Tu n'as pas encore renseigner cette information</p>
                        {% else %}
                            <p>{{ user.address }}</p>
                        {% endif %}
                    </article>
                    <div class="btnGroupUser">
                        {{ include('user/_delete_form.html.twig') }}
                        <a class="btn btnUser" href="{{ path('user_edit', {'id': user.id}) }}">Modifier mes informations</a>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="userTutoInfo">
                    <article>
                        {% for tutorial in user.tutorials %}
                            <p>{{ tutorial.title }}</p>
                        {% else %}

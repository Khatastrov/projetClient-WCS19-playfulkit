{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homePage') }}
{% endblock %}
{% block body %}
    {% if not app.user %}
        <div id="mainHome" class="row col-12">
            <div class="text-center col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                <a href="{{ path('lesson_index') }}"><div class="Lessons">
                        <img class="image" src = "{{ asset('build/images/homepage-lessons.png') }}" alt="lesson.jpg"/>
                    </div></a>
                <a href="{{ path('tutorial') }}"><div class="Lessons">
                        <img class= "image" src = "{{ asset('build/images/homepage-tutoriels.png') }}" alt="tuto.jpg"/>
                    </div></a>
            </div>
            <div class="formContainer col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 opacity">
                <img id="imgform" src = "{{ asset('build/images/form.png') }}" alt="lesson.jpg"/>
                <div class="opacity d-flex align-items-center justify-content-center">
                    {{ form_start(form) }}
                    {{ form_row(form.username, {'label': 'Nom d\'utilisateur :', 'attr': {'placeholder':'Pseudo'}}) }}
                    {{ form_row(form.email, {'label': 'Adresse email :', 'attr': {'placeholder':'Adresse@email.fr'}}) }}
                    {{ form_row(form.password.first, {'label': 'Mot de passe :', 'attr': {'placeholder':'Minimum de 6 caract√®res'}}) }}
                    {{ form_row(form.password.second, {'label': 'Confirmation :', 'attr': {'placeholder':'Confirme ton mot de passe'}}) }}
                    <div id="registration_form_birth_date" >
                        {{ form_row(form.birth_date, {'label': 'Date de naissance :'}) }}
                    </div>
                    <button type="submit" class="btn btn-primary" id="boutton" >{{ button_label|default('Je m\'inscris !') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% else %}
        <div class="row mx-auto justify-content-around mb-5 mt-5 col-12">
            <section class="w-50 text-center">
                <div class="border border-dark my-3 mx-3" id="lesson2">
                    <a href="{{ path('lesson_index') }}"> <div class="Lessons">
                            <img class="image" src = "{{ asset('build/images/homepage-lessons.png') }}" alt="lesson.jpg"/>
                        </div></a>
                </div>
                <div class="border border-dark my-3 mx-3" id="tutorial2">
                    <a href="{{ path('tutorial') }}"><div class="Lessons">
                            <img class="image" src = "{{ asset('build/images/homepage-tutoriels.png') }}" alt="tuto.jpg"/>
                        </div></a>
                </div>
            </section>
        </div>
    {% endif %}
    <section class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 mt-5">
        <h4 style="text-align:center;">Shop</h4>
        <div class="one-time">
            <div><img class="img-responsive" src="{{ asset('build/images/kit-shop-1.png') }}" alt="image 1"></div>
            <div><img class="img-responsive" src="{{ asset('build/images/kit-shop-2.png') }}" alt="image 2"></div>
            <div><img class="img-responsive" src="{{ asset('build/images/kit-shop-3.png') }}" alt="image 4"></div>
            <div><img class="img-responsive" src="{{ asset('build/images/kit-shop-4.png') }}" alt="image 4"></div>
        </div>
    </section>
    <section class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
        <h4 style="text-align:center;">Blog</h4>
        <div class="one-time">
            <div><img src="https://cdn.pixabay.com/photo/2019/06/25/04/40/light-4297386_960_720.jpg" alt="image 1"></div>
            <div><img src="https://cdn.pixabay.com/photo/2019/06/27/03/42/beach-4301479_960_720.jpg"></div>
            <div><img src="https://cdn.pixabay.com/photo/2019/06/25/04/40/light-4297386_960_720.jpg" alt="image 3"></div>
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent () }}
    {{ encore_entry_script_tags('homePage') }}
{% endblock %}
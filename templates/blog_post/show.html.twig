{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('blogShow') }}
{% endblock %}

{% block body %}

    <div class="container">
        <div id="blogPresentation">
            <h1>{{ post.title }}</h1>
        </div>
        <article class="row single-post mt-5 no-gutters">
            <div class="col">
                {% if post.illustration %}
                    <div class="image-wrapper float-right pr-3">
                        <img src="{{ asset('/images/blog/' ~ post.illustration) }}" alt="illustration de la leçon">
                    </div>
                {% endif %}
                <div class="single-post-content-wrapper p-3">
                    <p>{{ post.content }}</p>
                </div>
            </div>
        </article>
        <p class="by">
                Publié par Mathieu
            {% if post.creationDate %}
                le {{ post.creationDate|date('d/m/Y') }}
            {% endif %}
        </p>
        <div class="d-flex">
            <a href="{{ path('blog_index') }}" class="return">Retour</a>
        </div>
    </div>

    <div class="container">
        <div class="asideDesktop container">
            <strong>Les posts les plus récents :</strong>
            <ul>
                {% for recent in latest %}
                    <li>
                        <a href="{{ path('blog_show', {'id': recent.id}) }}">- {{ recent.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

    <aside class="float-md-left asideMobile">
        <div class="container">
            <strong>Les posts les plus récents :</strong>
            <ul>
                {% for recent in latest %}
                    <li>
                        <a href="{{ path('blog_show', {'id': recent.id}) }}">- {{ recent.title }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </aside>
{% endblock %}
